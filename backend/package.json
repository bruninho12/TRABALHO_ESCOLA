{
  "name": "despfinance-backend",
  "version": "2.0.0",
  "description": "Backend API para DespFinance - Sistema de controle financeiro gamificado com pagamentos integrados",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:check": "npm audit && npm run lint",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "db:setup": "node scripts/setup/setup-mongodb.js",
    "db:seed": "node scripts/setup/seed-data.js",
    "db:clean": "node scripts/database/clean-database.js",
    "db:migrate": "node scripts/database/migrate-database.js",
    "db:backup": "node scripts/database/backup-database.js",
    "db:check": "node scripts/database/check-databases.js",
    "db:test": "node scripts/database/test-connection.js",
    "rpg:setup": "node scripts/setup/setup-rpg-system.js",
    "seed": "node src/seeders/index.js",
    "test:connection": "node src/utils/database/connectionTester.js",
    "check:config": "node src/utils/validation/configValidator.js",
    "check:security": "node src/utils/security/securityChecker.js",
    "logs:security": "tail -f logs/security.log",
    "logs:error": "tail -f logs/error.log",
    "logs:clean": "rm -rf logs/*.log",
    "production:check": "npm run security:check && npm run check:config",
    "demo:reset": "node src/utils/maintenance/demoUserManager.js"
  },
  "keywords": [
    "financas",
    "finance",
    "api",
    "express",
    "nodejs",
    "jwt",
    "stripe",
    "mercadopago",
    "gamification",
    "mongodb"
  ],
  "author": "Bruno Souza",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@sentry/node": "^10.25.0",
    "@sentry/tracing": "^7.120.4",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.10.0",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.13.0",
    "stripe": "^14.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^25.0.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  }
}
