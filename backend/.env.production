# =============================
# DespFinance Backend - .env (PRODUÇÃO)
# =============================

# Ambiente
NODE_ENV=production
PORT=3001
LOG_LEVEL=warn

# Banco de Dados
MONGODB_URI=mongodb+srv://<usuario>:<senha>@<cluster>.mongodb.net/despfinance?retryWrites=true&w=majority

# JWT (mínimo 32 caracteres, diferentes)
JWT_SECRET=insira_uma_chave_secreta_forte_e_unica_aqui_32caracteres_ou_mais
JWT_REFRESH_SECRET=insira_outra_chave_secreta_forte_e_unica_aqui_32caracteres_ou_mais
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting (ajuste para produção)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Email (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_app_gmail
EMAIL_FROM_NAME=DespFinance
EMAIL_FROM_EMAIL=noreply@despfinance.com

# Stripe
STRIPE_PUBLIC_KEY=pk_live_sua_public_key
STRIPE_SECRET_KEY=sk_live_sua_secret_key
STRIPE_WEBHOOK_SECRET=whsec_seu_webhook_secret

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=APP_USR-seu_access_token
MERCADOPAGO_PUBLIC_KEY=APP_USR-seu_public_key

# Frontend
FRONTEND_URL=https://seu-dominio.com
CORS_ORIGIN=https://seu-dominio.com

# Gamificação
EXPERIENCE_PER_LEVEL=100
INITIAL_COINS=100
ACHIEVEMENT_BONUS=50

# Backup/Monitoramento (exemplo)
BACKUP_CRON=0 3 * * *
MONITORING_URL=https://sua-url-monitoramento.com

# Segurança extra
BCRYPT_ROUNDS=12

# Configurações padrão
DEFAULT_CURRENCY=BRL
DEFAULT_LANGUAGE=pt-BR
DEFAULT_TIMEZONE=America/Sao_Paulo
